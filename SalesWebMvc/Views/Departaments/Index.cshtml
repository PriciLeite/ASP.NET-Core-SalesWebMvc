@model IEnumerable<Departament>

@{
    ViewData["Title"] = "Departamento";
}

<h3>Departamento</h3>
<p>
    <a asp-action="Create" class="btn btn-default">Cadastrar Novo</a>
</p>

<div class="row">
    <table class="table table-striped table-hover">
        <thead>
            <tr class="table-primary">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>                   
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a class="btn btn-primary btn-sm" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>